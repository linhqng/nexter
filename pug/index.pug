include mixins/_feature.pug
include mixins/_home.pug
include mixins/_gallery__item.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="keywords", content="")
        meta(name="description", content="")
        link(rel="shortcut icon", href="img/favicon.png", type="image/png")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,400,400i|Nunito:300,300i")
        link(rel="stylesheet", href="css/style.css")
        title nexter &mdash; your home, your freedom
    body.container
        .sidebar
            button.nav-btn
        header.header
            img.header__logo(src="../img/logo.png", alt="Nexter logo")
            h3.heading-3 Your own home
            h1.heading-1 The ultimate personal freedom
            button.btn.header__btn View our properties
            .header__seenon-text Seen on
            .header__seenon-logos
                img(src="../img/logo-bbc.png", alt="Seen on logo")
                img(src="../img/logo-forbes.png", alt="Seen on logo")
                img(src="../img/logo-techcrunch.png", alt="Seen on logo")
                img(src="../img/logo-bi.png", alt="Seen on logo")
        .realtors
            h3.heading-3 Top 3 Realtors
            .realtors__list
                img.realtors__img(src="../img/realtor-1.jpeg", alt="Realtor")
                .realtors__details
                    h4.heading-4.heading-4--light Erik Feinman
                    p.realtors__sold 245 houses sold
                img.realtors__img(src="../img/realtor-2.jpeg", alt="Realtor")
                .realtors__details
                    h4.heading-4.heading-4--light Kim Brown
                    p.realtors__sold 212 houses sold
                img.realtors__img(src="../img/realtor-3.jpeg", alt="Realtor")
                .realtors__details
                    h4.heading-4.heading-4--light Toby Ramsey
                    p.realtors__sold 198 houses sold
