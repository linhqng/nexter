            +feature("../img/sprite.svg#icon-map-pin","All homes in in top locations","Tenetur distinctio necessitatibus pariatur voluptatibus quidem consequatur harum.")
            +feature("../img/sprite.svg#icon-key","New home in one week","Vero ipsum sapiente molestias accusamus rerum. Lorem, ipsum dolor sit amet consectetur adipisicing elit.")
            +feature("../img/sprite.svg#icon-presentation","Top 1% realtors","Quidem consequatur harum, voluptatum mollitia quae. Tenetur distinctio necessitatibus pariatur voluptatibus.")
            +feature("../img/sprite.svg#icon-lock","Secure payments on nexter","Pariatur voluptatibus quidem consequatur harum, voluptatum mollitia quae.")
        .story__pictures
            img.story__img--1(src="../img/story-1.jpeg", alt="Couple with new house")
            img.story__img--2(src="../img/story-2.jpeg", alt="New house")
        .story__content
            h3.heading-3.mb-sm Happy Customers
            h2.heading-2.heading-2--dark.mb-md &ldquo;The best decision of our life&ldquo;
            p.story__text Lorem, ipsum dolor sit amet consectetur adipisicing elit. Tenetur distinctio necessitatibus pariatur voluptatibus. Quidem consequatur harum volupta!
            button.btn Find your own home
        section.homes
            +home("../img/house-1.jpeg","Beautiful Family House","USA","5 rooms","325 m","$1,200")
            +home("../img/house-2.jpeg","Modern Glass Villa","Canada","6 rooms","450 m","$2,750,000")
            +home("../img/house-3.jpeg","Cozy Country House","UK","4 rooms","250 m","$850,000")
            +home("../img/house-4.jpeg","Large Rustical Villa","Portugal","6 rooms","480 m","$1,950,000")
            +home("../img/house-5.jpeg","Majestic Palace House","Germany","18 rooms","4230 m","$9,500,000")
            +home("../img/house-6.jpeg","Modern Familiy Apartment","Italy","3 rooms","180 m","$600,000")
